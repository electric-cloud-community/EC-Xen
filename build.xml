<project name="EC-Xen" default="package" basedir=".">
    <description>
        Build the EC-Xen plugin
    </description>

    <property name="buildconfigdir" value="../Plugin-In-A-Box/scripts" />

    <!-- plugin specific properties -->
    <property name="pluginKey" value="EC-Xen" />
    <property name="pluginVersion" value="1.0" />
    <property name="gwtModules" value="ecplugins.xen.ConfigurationManagement" />
    <property name="package.export.src" value="xen.srcs"/>

    <import file="${buildconfigdir}/buildTargets.xml"/>

    <!-- Package sources for exported utility classes. -->
    <fileset id="xen.srcs" dir="${dir.src}">
        <include name="**/PluginConstants.java"/>
        <include name="**/XenConfigList.java"/>
        <include name="**/XenConfigListLoader.*"/>
    </fileset>
</project>
